                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/rubik"
                                android:text="US Bangla"
                                android:textColor="#4b4b4b"
                                android:textStyle="bold" />
